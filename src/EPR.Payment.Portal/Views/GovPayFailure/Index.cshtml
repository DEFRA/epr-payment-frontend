@using EPR.Payment.Portal.Common.Configuration
@using EPR.Payment.Portal.Common.Models
@using Microsoft.AspNetCore.Mvc.Routing;
@model CompositeViewModel;

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">

            <h1 class="govuk-heading-l">@Localizer["payment_unsuccessful"]</h1>
            <p></p>
            <p class="govuk-body">@Localizer["payment_not_completed"]</p>
            <p></p>
            <p class="govuk-body">
                <form method="post">
                    <input type="hidden" value="@Model.completePaymentViewModel.UserId" />
                    <input type="hidden" value="@Model.completePaymentViewModel.OrganisationId" />
                    <input type="hidden" value="@Model.completePaymentViewModel.Reference" />
                    <input type="hidden" value="@Model.completePaymentViewModel.Regulator" />
                    <input type="hidden" value="@Model.completePaymentViewModel.Amount" />
                    <button class="govuk-button" data-module="govuk-button">
                        @Localizer["try_online_payment_again"]
                    </button>
                </form>
            </p>
            <p class="govuk-body">
                @Localizer["reference_number_is"] <strong>@Model.completePaymentViewModel.Reference</strong>.
                <br>@Localizer["note_reference"]
            </p>
            <p class="govuk-body">@Localizer["use_these_details"] £@(((decimal?)Model.completePaymentViewModel.Amount??0)/100):</p>
            <p></p>
            <h3 class="govuk-heading-s">@Localizer["pay_by_bank_transfer"]</h3>
            <p></p>
            <p class="govuk-body">
                @Localizer["account_name"]: Environment Agency<br />
                @Localizer["account_number"]: 10014411<br />
                @Localizer["sort_code"]: 60-70-80<br />
                @Localizer["bank_name"]: RBS/NatWest, London Corporate Service Centre, CPB Services, 2nd floor, 280 Bishopsgate, London EC2M 4RB<br />
            </p>
            <h3 class="govuk-heading-s">@Localizer["pay_by_phone"]</h3>
            <p></p>
            <p class="govuk-body">
                @Localizer["environment_agency"]<br />
                @Localizer["telephone"]: 03708 506 506<br />
                @Localizer["telephone_outside_uk"]: +44 (0) 114 282 5312<br />
            </p>
            <p><a href="https://www.gov.uk/call-charges" class="govuk-link">@Localizer["call_charges"]</a></p>
            <p></p>
            <p class="govuk-body"><a href=@Model.dashboardConfiguration.BackUrl.Url aria-label="@Localizer["return_to_dashboard_descriptive_text"]">@Localizer["return_to_dashboard"]</a></p>
            <p></p>
            
        </div>
    </div>
</main>